{
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "platform": "github",
  "repositories": [
    "SabrinaPloner/renovate-vulnerability-playground"
  ],
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "groupName": "all dependencies",
      "groupSlug": "all",
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor", "patch", "major"
      ],
      "enabled": "false"
    },
    {
      "groupName": "security updates",
      "groupSlug": "security",
      "matchPackagePatterns:": [
        "*"
      ],
      "matchDatasource": "grype-scan",
      "enabled": "true"
    }
  ],
  "maven": {
    "enabled": false
  },
  "customDatasources": {
    "grype-scan": {
      "defaultRegistryUrlTemplate": "file://packages/{{packageName}}"
    }
  },
  "recreateWhen": "always"
}