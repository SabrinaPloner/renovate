{
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "platform": "github",
  "repositories": [
    "SabrinaPloner/renovate-vulnerability-playground"
  ],
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "groupName": "security updates",
      "groupSlug": "security update",
      "enabled": "true",
      "matchPackageNames": ["*"],
      "matchDatasources": ["maven"],
      "overrideDatasource": ["custom.grype"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": false
  },
  "customDatasources": {
    "grype": {
      "defaultRegistryUrlTemplate": "file://packages/{{packageName}}",
      "format": "json",
      "transformTemplates": [
        "{ \"releases\": $map($, function($v) { { \"version\": $v.version, \"sourceUrl\": $v.filelink } }) }"
      ]

    }
  },
  "recreateWhen": "always"
}