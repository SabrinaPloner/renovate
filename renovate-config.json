{
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "platform": "github",
  "repositories": [
    "SabrinaPloner/renovate-vulnerability-playground"
  ],
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "groupName": "all-maven",
      "groupSlug": "all-maven",
      "enabled": "false",
      "matchManagers": [
        "maven"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": false
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/|\\.)custom-ds-example\\.yml$"
      ],
      "datasourceTemplate": "custom.grype",
      "matchStrings": [
        "#\\s*renovate:\\s*(datasource=(?<datasource>.*?)\\s*)?depName=(?<depName>.*?)(\\s*versioning=(?<versioning>.*?))?\\s*\\w*:\\s*[\"']?(?<currentValue>.+?)[\"']?\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"

    }
  ],
  "customDatasources": {
    "grype": {
      "defaultRegistryUrlTemplate": "file:///tmp/dependencies/{{packageName}}/versiontracker.json"
    }
  },
  "recreateWhen": "always"
}
